<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Баланс -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/balanceCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/balanceText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Баланс: 12 500 ₽"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:singleLine="true"
            android:ellipsize="none" />
    </com.google.android.material.card.MaterialCardView>



    <!-- Доход и История -->
    <LinearLayout
        android:id="@+id/topButtonsLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/balanceCard"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Доход -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="16dp"
            android:gravity="center_horizontal"
            tools:ignore="ExtraText">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Доход"
                android:textSize="14sp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/incomeButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="+"
                android:textSize="28sp"
                android:textColor="@android:color/black"
                android:padding="0dp"
                app:cornerRadius="36dp"
                app:backgroundTint="#F5DEB3"
                android:elevation="8dp"
                app:strokeColor="#D2B48C"
                app:strokeWidth="2dp"
                android:stateListAnimator="@null"
                />

        </LinearLayout>

        <!-- История -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="История"
                android:textSize="14sp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/historyButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="🕒"
                android:textSize="28sp"
                android:textColor="@android:color/black"
                android:padding="0dp"
                app:cornerRadius="36dp"
                app:backgroundTint="#F5DEB3"
                android:elevation="8dp"
                app:strokeColor="#D2B48C"
                app:strokeWidth="2dp"
                android:stateListAnimator="@null"
                />

        </LinearLayout>
    </LinearLayout>

    <!-- Разделительная линия -->
    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/topButtonsLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Прокручиваемая область с расходными кнопками -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollExpenses"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintVertical_bias="0.0">

        <GridLayout
            android:id="@+id/expenseGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alignmentMode="alignMargins"
            android:columnCount="3"
            android:rowCount="3"
            android:useDefaultMargins="true">

            <!-- Продукты -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Продукты"
                    android:textSize="14sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/foodButton"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:minWidth="72dp"
                    android:minHeight="72dp"
                    android:padding="0dp"
                    android:text="🍎"
                    android:textColor="@android:color/white"
                    android:textSize="32sp"
                    app:backgroundTint="#4CAF50"
                    app:cornerRadius="36dp"
                    android:elevation="8dp"
                    app:strokeColor="#388E3C"
                    app:strokeWidth="2dp"
                    android:stateListAnimator="@null" />

                <TextView
                    android:id="@+id/foodAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3 200 ₽"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Транспорт -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Транспорт"
                    android:textSize="14sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/transportButton"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:minWidth="72dp"
                    android:minHeight="72dp"
                    android:padding="0dp"
                    android:text="🚌"
                    android:textColor="@android:color/white"
                    android:textSize="32sp"
                    app:backgroundTint="#4CAF50"
                    app:cornerRadius="36dp"
                    android:elevation="8dp"
                    app:strokeColor="#388E3C"
                    app:strokeWidth="2dp"
                    android:stateListAnimator="@null" />

                <TextView
                    android:id="@+id/transportAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="800 ₽"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Аптека -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Аптека"
                    android:textSize="14sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/pharmacyButton"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:minWidth="72dp"
                    android:minHeight="72dp"
                    android:padding="0dp"
                    android:text="💊"
                    android:textColor="@android:color/white"
                    android:textSize="32sp"
                    app:backgroundTint="#4CAF50"
                    app:cornerRadius="36dp"
                    android:elevation="8dp"
                    app:strokeColor="#388E3C"
                    app:strokeWidth="2dp"
                    android:stateListAnimator="@null" />

                <TextView
                    android:id="@+id/pharmacyAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="450 ₽"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Одежда -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Одежда"
                    android:textSize="14sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/clothesButton"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:minWidth="72dp"
                    android:minHeight="72dp"
                    android:padding="0dp"
                    android:text="👕"
                    android:textColor="@android:color/white"
                    android:textSize="32sp"
                    app:backgroundTint="#4CAF50"
                    app:cornerRadius="36dp"
                    android:elevation="8dp"
                    app:strokeColor="#388E3C"
                    app:strokeWidth="2dp"
                    android:stateListAnimator="@null" />

                <TextView
                    android:id="@+id/clothesAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 100 ₽"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Хобби -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Хобби"
                    android:textSize="14sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/entertainmentButton"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:minWidth="72dp"
                    android:minHeight="72dp"
                    android:padding="0dp"
                    android:text="🎮"
                    android:textColor="@android:color/white"
                    android:textSize="32sp"
                    app:backgroundTint="#4CAF50"
                    app:cornerRadius="36dp"
                    android:elevation="8dp"
                    app:strokeColor="#388E3C"
                    app:strokeWidth="2dp"
                    android:stateListAnimator="@null" />

                <TextView
                    android:id="@+id/entertainmentAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 300 ₽"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- ЖКХ -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ЖКХ"
                    android:textSize="14sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/rentButton"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:minWidth="72dp"
                    android:minHeight="72dp"
                    android:padding="0dp"
                    android:text="🏠"
                    android:textColor="@android:color/white"
                    android:textSize="32sp"
                    app:backgroundTint="#4CAF50"
                    app:cornerRadius="36dp"
                    android:elevation="8dp"
                    app:strokeColor="#388E3C"
                    app:strokeWidth="2dp"
                    android:stateListAnimator="@null" />

                <TextView
                    android:id="@+id/rentAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5 200 ₽"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Другое -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Другое"
                    android:textSize="14sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/otherButton"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:minWidth="72dp"
                    android:minHeight="72dp"
                    android:padding="0dp"
                    android:text="➕"
                    android:textColor="@android:color/white"
                    android:textSize="32sp"
                    app:backgroundTint="#4CAF50"
                    app:cornerRadius="36dp"
                    android:elevation="8dp"
                    app:strokeColor="#388E3C"
                    app:strokeWidth="2dp"
                    android:stateListAnimator="@null" />

                <TextView
                    android:id="@+id/otherAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 ₽"
                    android:textSize="12sp" />
            </LinearLayout>

        </GridLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
