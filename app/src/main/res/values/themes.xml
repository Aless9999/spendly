<resources>
    <!-- Базовая тема с поддержкой светлой и тёмной темы -->
    <style name="Theme.Spendly" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Основные цвета -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Поверхность и фон -->
        <item name="colorSurface">#F7F8FA</item>
        <item name="colorOnSurface">@color/black</item>

        <item name="colorOnBackground">@color/black</item>

        <!-- Фон окна и статус-бар -->

        <item name="android:statusBarColor">#F7F8FA</item>

        <!-- Стиль кнопок (по умолчанию) -->
        <item name="buttonStyle">@style/Widget.MaterialComponents.Button</item>
    </style>
</resources>

